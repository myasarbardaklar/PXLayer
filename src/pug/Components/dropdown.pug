mixin dropdown(attr)
  // .pxl-dropdown
  .pxl-dropdown(class="pxl-dropdown--" + attr.type, data-dropdown-position=attr.position)
    block
  // ## .pxl-dropdown

mixin dropdown__trigger(attr)
  label.pxl-dropdown__trigger(tabindex="0")&attributes(attr)
    block

mixin dropdown__body
  .pxl-dropdown__body
    block
