doctype html
html(lang='tr' dir='ltr')

  block pageInformation

  //- Head
  head
    include ./head.pug
  
  //- Body
  body
    mixin body(header = true, footer = true)
      // Main Content
      #pxl-body
        if header
          //- Header
          include ../Layouts/header.pug
          |
          |
        
        //- Content
        block

        if footer
          |
          |
          //- Footer
          include ../Layouts/footer.pug
      // Main Content

    block body

    |
    |
    //- Scripts
    include ./scripts.pug